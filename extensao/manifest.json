{
  "manifest_version": 3,
  "name": "TLDRify",
  "description": "Copiloto de leitura que resume artigos com IA em bullet points, perguntas ou formato acadÃªmico.",
  "version": "1.0.0",
  "permissions": [
    "activeTab",
    "storage",
    "downloads"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}